<Page x:Class="P4WPF.IngredientEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:P4WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IngredientEdit">

    <Grid Background="White">
        <StackPanel x:Name="stEdit" Grid.Row="3" Grid.Column="4" Grid.RowSpan="2" >
            <TextBox FontSize="25" Height="40" Margin="0,50,0,0">ingredient:</TextBox>
            <TextBlock Height="50" DataContext="{Binding selectedKlant}" Text="{Binding IngredientName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="20" Margin="0,25,0,0"/>
            
            <!--<TextBox FontSize="30" Height="50">Unit:</TextBox>
            <TextBlock Height="50" DataContext="{Binding Unit }" Text="{Binding , Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" FontSize="20" Margin="0,5,0,0"/>-->
            <Button  Height="40" FontSize="20" x:Name="btUpdate" Click="btUpdate_Click">Update.</Button>
        </StackPanel>
    </Grid>
</Page>
